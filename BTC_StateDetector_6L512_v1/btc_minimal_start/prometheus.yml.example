# Prometheus configuration for BTC prediction monitoring
# Copy this to your Prometheus server's prometheus.yml

global:
  scrape_interval: 1m
  evaluation_interval: 1m
  scrape_timeout: 30s

scrape_configs:
  # BTC Direction Prediction Exporter
  - job_name: 'btc_predictions'
    static_configs:
      - targets: ['btc-predictor-exporter:9100']  # Use container name if in same network
        # Or use: ['<your-host-ip>:9100'] if running externally
    scrape_interval: 1m
    metrics_path: '/metrics'
    scheme: 'http'

  # Optional: Your existing Cortex/Prometheus
  - job_name: 'cortex'
    static_configs:
      - targets: ['10.1.20.60:9009']
    scrape_interval: 15s

# Optional: Alerting rules
rule_files:
  - 'btc_prediction_alerts.yml'



